{
  "name": "vscode-any-lint",
  "displayName": "any-lint",
  "description": "VSCode Any Lint allows you to lint any files with any command line tools",
  "author": {
    "name": "tamayika",
    "email": "tamayika40@gmail.com",
    "url": "https://github.com/tamayika"
  },
  "homepage": "https://github.com/tamayika/vscode-any-lint",
  "publisher": "tamayika",
  "icon": "any-lint-icon.png",
  "repository": {
    "url": "https://github.com/tamayika/vscode-any-lint"
  },
  "version": "0.3.3",
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": [
    "Linters"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Any Lint Configuration",
      "properties": {
        "any-lint.linters": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "name",
              "binPath"
            ],
            "properties": {
              "name": {
                "type": "string"
              },
              "disabled": {
                "type": "boolean"
              },
              "binPath": {
                "type": "string"
              },
              "args": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "cwd": {
                "type": "string"
              },
              "condition": {
                "type": "string"
              },
              "on": {
                "type": "array",
                "items": {
                  "enum": [
                    "change",
                    "save"
                  ]
                }
              },
              "diagnostic": {
                "type": "object",
                "properties": {
                  "output": {
                    "type": "string",
                    "enum": [
                      "stdout",
                      "stderr"
                    ]
                  },
                  "type": {
                    "type": "string",
                    "enum": [
                      "lines",
                      "json",
                      "yaml"
                    ]
                  },
                  "format": {
                    "type": "string"
                  },
                  "selectors": {
                    "type": "object",
                    "properties": {
                      "diagnostics": {
                        "type": "string"
                      },
                      "file": {
                        "type": "string"
                      },
                      "subDiagnostics": {
                        "type": "string"
                      },
                      "startLine": {
                        "type": "string"
                      },
                      "startColumn": {
                        "type": "string"
                      },
                      "endLine": {
                        "type": "string"
                      },
                      "endColumn": {
                        "type": "string"
                      },
                      "message": {
                        "type": "string"
                      },
                      "severity": {
                        "type": "string"
                      }
                    },
                    "required": [
                      "diagnostics",
                      "file",
                      "startLine",
                      "startColumn"
                    ]
                  },
                  "lineZeroBased": {
                    "type": "boolean"
                  },
                  "columnZeroBased": {
                    "type": "boolean"
                  },
                  "columnCharacterBased": {
                    "type": "boolean"
                  },
                  "endColumnInclusive": {
                    "type": "boolean"
                  },
                  "severity": {
                    "type": "string",
                    "enum": [
                      "error",
                      "warning",
                      "info",
                      "hint"
                    ]
                  },
                  "severityMap": {
                    "type": "object",
                    "additionalProperties": {
                      "type": "string",
                      "enum": [
                        "error",
                        "warning",
                        "info",
                        "hint"
                      ]
                    }
                  },
                  "actions": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "type": {
                          "type": "string",
                          "enum": [
                            "openUri",
                            "ignore",
                            "run"
                          ]
                        },
                        "title": {
                          "type": "string"
                        },
                        "condition": {
                          "type": "string"
                        },
                        "uri": {
                          "type": "string"
                        },
                        "comment": {
                          "type": "string"
                        },
                        "location": {
                          "type": "string",
                          "enum": [
                            "startFile",
                            "previousLine",
                            "currentLine",
                            "nextLine",
                            "rewriteLine"
                          ]
                        },
                        "binPath": {
                          "type": "string"
                        },
                        "args": {
                          "type": "array",
                          "items": {
                            "type": "string"
                          }
                        },
                        "cwd": {
                          "type": "string"
                        },
                        "lintAfterRun": {
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.91.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^5.1.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "typescript": "^5.5.3"
  },
  "dependencies": {
    "@jitl/quickjs-singlefile-cjs-release-sync": "^0.29.2",
    "js-yaml": "^4.1.0",
    "quickjs-emscripten-core": "^0.29.2",
    "quickjs-emscripten-sync": "^1.5.2"
  }
}
